-- Create the database
CREATE DATABASE mydatabase;

-- Connect to the database
\c mydatabase

-- Create a table
CREATE TABLE items (
    id SERIAL PRIMARY KEY,
    name VARCHAR(100),
    description TEXT,
    price DECIMAL
);

-- Insert sample data
INSERT INTO items (name, description, price) VALUES
('Tea', 'A refreshing hot tea', 1.99),
('Cola', 'A cold refreshing cola', 0.99),
('Water', 'Bland water', 0.00);
